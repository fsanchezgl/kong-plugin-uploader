{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2022",
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["./run/**/*"],
}

